<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/ic_launcher_background"
        android:elevation="@dimen/cardview_compat_inset_shadow"
        android:padding="1dp">


        <TextView
            android:id="@+id/textView126"
            android:layout_width="275dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="2dp"
            android:hint="Item Category : "
            android:padding="2dp"
            android:textColor="#131313"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/editTextNumber22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="280dp"
            android:layout_marginTop="6dp"
            android:ems="3"
            android:gravity="right"
            android:hint="00000"
            android:inputType="number"
            android:textColor="#131313"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/textView136"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="280dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_rounded_blue"
            android:paddingLeft="4dp"
            android:paddingTop="2dp"
            android:paddingRight="4dp"
            android:paddingBottom="2dp"
            android:text="Req Qty"
            android:textColor="@color/white"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView137"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="2dp"
            android:text="Pending Purchase Quantity:"
            android:padding="2dp"
            android:textColor="#E49E88"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/editTextNumber21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="45dp"
            android:ems="3"
            android:gravity="right"
            android:hint="00000"
            android:inputType="number"
            android:textColor="#131313"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/textView138"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>